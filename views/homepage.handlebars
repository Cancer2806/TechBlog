{{!-- Presents the list of blogs to anyone visiting the Site --}}
{{!-- Loop over each blog in the blogs array --> --}}
{{#each blogs as |blog| }}
<div class="blog-container">
  <div class="blog-box">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <h3>Created by {{user.userName}} on {{format_date createdAt}}</h3>
  </div>
  <div class="contents">
    <p>{{blog.contents}}</p>
  </div>
</div>
{{/each}}
